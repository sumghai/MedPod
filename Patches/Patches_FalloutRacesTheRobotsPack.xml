<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Fallout Races: The Robots Pack 1.1</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Prevent MedPod from treating Fallout Robots -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/disallowedRaces</xpath>
					<value>
						<li>Assaultron</li>
						<li>MrHandy</li>
						<li>MisterGutsy</li>
						<li>NurseHandy</li>
						<li>Protectetron</li>
						<li>ScrapBot</li>
						<li>Securitron</li>
						<li>Sentrybot</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
</Patch>