<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ABF: Civil Synstructs</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Prevent MedPods from treating civil synstructs -->
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="MedPodBedBase"]/comps/li[@Class="MedPod.CompProperties_TreatmentRestrictions"]/disallowedRaces</xpath>
					<value>
						<li>ABF_Thing_Synstruct_Commoner</li>
						<li>ABF_Thing_Synstruct_Simpleton</li>
						<li>ABF_Thing_Synstruct_Socialite</li>
						<li>ABF_Thing_Synstruct_Stoic</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
	
